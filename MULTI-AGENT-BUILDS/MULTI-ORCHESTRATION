!/bin/bash # ============================================================================= # AI ORCHESTRATION PLATFORM - ALL COMPLETE SCRIPTS # ============================================================================= # This file contains ALL the scripts needed to build and run the platform # Copy each script to its own file and make it executable with chmod +x echo "üöÄ AI ORCHESTRATION PLATFORM - ALL SCRIPTS" echo "==========================================" echo "This file contains all scripts needed. Extract each one to run the platform." echo "" # ============================================================================= # SCRIPT 1: MASTER BUILD SCRIPT - create_ai_orchestrator.sh # ============================================================================= cat > create_ai_orchestrator.sh << 'MASTER_BUILD_EOF' #!/bin/bash # AI Orchestration Platform - Master Build Script # This script creates the complete application structure with all files set -e # Exit on any error echo "üöÄ AI ORCHESTRATION PLATFORM - MASTER BUILD" echo "==============================================" echo "Creating complete application on Desktop..." echo "" # Determine the desktop path if [[ "$OSTYPE" == "darwin"* ]]; then DESKTOP_PATH="$HOME/Desktop" else DESKTOP_PATH="$HOME/Desktop" fi PROJECT_DIR="$DESKTOP_PATH/ai-orchestrator" # Check if project directory already exists if [ -d "$PROJECT_DIR" ]; then echo "‚ö†Ô∏è Project directory already exists at: $PROJECT_DIR" read -p "Do you want to remove it and create a fresh installation? (y/N): " -n 1 -r echo if [[ $REPLY =~ ^[Yy]$ ]]; then echo "üóëÔ∏è Removing existing directory..." rm -rf "$PROJECT_DIR" else echo "‚ùå Aborting installation." exit 1 fi fi # Create project structure echo "üìÅ Creating project structure..." mkdir -p "$PROJECT_DIR"/{backend/{api,models,services,utils},frontend/{src/{components,pages,services,hooks,utils,styles},public},database,logs,exports} cd "$PROJECT_DIR" # Create backend files echo "üêç Creating backend files..." # Backend main application cat > backend/app.py << 'BACKEND_APP_EOF' import os import json import sqlite3 import asyncio from datetime import datetime from flask import Flask, request, jsonify, send_from_directory from flask_socketio import SocketIO, emit, join_room, leave_room from flask_cors import CORS from dotenv import load_dotenv import anthropic import openai import threading import time from contextlib import contextmanager # Load environment variables load_dotenv() app = Flask(__name__) app.config['SECRET_KEY'] = os.getenv('SECRET_KEY', 'ai-orchestrator-secret-key') socketio = SocketIO(app, cors_allowed_origins="*", async_mode='eventlet') CORS(app) # Initialize AI clients anthropic_client = anthropic.Anthropic(api_key=os.getenv('ANTHROPIC_API_KEY')) openai_client = openai.OpenAI(api_key=os.getenv('OPENAI_API_KEY')) # Database configuration DATABASE_PATH = os.getenv('DATABASE_PATH', 'database/orchestrator.db') @contextmanager def get_db_connection(): conn = sqlite3.connect(DATABASE_PATH) conn.row_factory = sqlite3.Row try: yield conn finally: conn.close() def init_database(): """Initialize the database with schema""" with get_db_connection() as conn: with open('database/schema.sql', 'r') as f: conn.executescript(f.read()) conn.commit() class AIOrchestrator: def __init__(self): self.active_conversations = {} async def call_claude(self, prompt, system_instruction, temperature=0.7, conversation_id=None): """Call Claude API with error handling""" try: response = anthropic_client.messages.create( model="claude-3-5-sonnet-20241022", max_tokens=2000, temperature=temperature, system=system_instruction, messages=[{"role": "user", "content": prompt}] ) content = response.content[0].text if response.content else "No response" # Log to database if conversation_id: self.log_message(conversation_id, "claude", "assistant", content) return { "success": True, "content": content, "model": "claude-3.5-sonnet", "tokens": response.usage.output_tokens if hasattr(response, 'usage') else 0 } except Exception as e: error_msg = f"Claude API Error: {str(e)}" if conversation_id: self.log_message(conversation_id, "claude", "error", error_msg) return {"success": False, "error": error_msg} async def call_openai(self, prompt, system_instruction, temperature=0.7, conversation_id=None): """Call OpenAI API with error handling""" try: response = openai_client.chat.completions.create( model="gpt-4o", temperature=temperature, messages=[ {"role": "system", "content": system_instruction}, {"role": "user", "content": prompt} ], max_tokens=2000 ) content = response.choices[0].message.content # Log to database if conversation_id: self.log_message(conversation_id, "openai", "assistant", content) return { "success": True, "content": content, "model": "gpt-4o", "tokens": response.usage.completion_tokens if response.usage else 0 } except Exception as e: error_msg = f"OpenAI API Error: {str(e)}" if conversation_id: self.log_message(conversation_id, "openai", "error", error_msg) return {"success": False, "error": error_msg} def log_message(self, conversation_id, ai_model, role, content, metadata=None): """Log message to database""" with get_db_connection() as conn: conn.execute( """INSERT INTO messages (conversation_id, ai_model, role, content, metadata) VALUES (?, ?, ?, ?, ?)""", (conversation_id, ai_model, role, content, json.dumps(metadata) if metadata else None) ) conn.commit() async def orchestrate_conversation(self, conversation_id, goal, claude_system, openai_system, claude_temp, openai_temp, iterations=5): """Main orchestration logic""" self.active_conversations[conversation_id] = True conversation_history = [] current_prompt = goal socketio.emit('conversation_started', { 'conversation_id': conversation_id, 'goal': goal }, room=f"conv_{conversation_id}") for i in range(iterations): if not self.active_conversations.get(conversation_id, False): break # Claude's turn socketio.emit('ai_thinking', { 'ai': 'claude', 'iteration': i + 1, 'total_iterations': iterations }, room=f"conv_{conversation_id}") claude_response = await self.call_claude( current_prompt, claude_system, claude_temp, conversation_id ) if claude_response['success']: conversation_history.append({ 'ai': 'claude', 'content': claude_response['content'], 'iteration': i + 1, 'timestamp': datetime.now().isoformat() }) socketio.emit('ai_response', { 'ai': 'claude', 'content': claude_response['content'], 'iteration': i + 1, 'tokens': claude_response.get('tokens', 0) }, room=f"conv_{conversation_id}") # Prepare prompt for OpenAI current_prompt = f"""Goal: {goal} Previous conversation: {self.format_conversation_history(conversation_history)} Claude just responded: {claude_response['content']} Please build upon this response or provide a different perspective to help achieve the goal.""" # OpenAI's turn socketio.emit('ai_thinking', { 'ai': 'openai', 'iteration': i + 1, 'total_iterations': iterations }, room=f"conv_{conversation_id}") openai_response = await self.call_openai( current_prompt, openai_system, openai_temp, conversation_id ) if openai_response['success']: conversation_history.append({ 'ai': 'openai', 'content': openai_response['content'], 'iteration': i + 1, 'timestamp': datetime.now().isoformat() }) socketio.emit('ai_response', { 'ai': 'openai', 'content': openai_response['content'], 'iteration': i + 1, 'tokens': openai_response.get('tokens', 0) }, room=f"conv_{conversation_id}") # Prepare prompt for next Claude iteration current_prompt = f"""Goal: {goal} Previous conversation: {self.format_conversation_history(conversation_history)} OpenAI just responded: {openai_response['content']} Please build upon this response or provide improvements to help achieve the goal.""" # Small delay between iterations await asyncio.sleep(1) # Mark conversation as completed with get_db_connection() as conn: conn.execute( "UPDATE conversations SET status = 'completed', updated_at = CURRENT_TIMESTAMP WHERE id = ?", (conversation_id,) ) conn.commit() socketio.emit('conversation_completed', { 'conversation_id': conversation_id, 'total_messages': len(conversation_history) }, room=f"conv_{conversation_id}") self.active_conversations[conversation_id] = False def format_conversation_history(self, history): """Format conversation history for AI context""" formatted = [] for msg in history[-6:]: # Last 6 messages for context formatted.append(f"{msg['ai'].upper()}: {msg['content'][:300]}...") return "\n\n".join(formatted) def stop_conversation(self, conversation_id): """Stop an active conversation""" self.active_conversations[conversation_id] = False # Initialize orchestrator orchestrator = AIOrchestrator() # API Routes @app.route('/api/health', methods=['GET']) def health_check(): return jsonify({"status": "healthy", "timestamp": datetime.now().isoformat()}) @app.route('/api/conversations', methods=['POST']) def create_conversation(): data = request.json with get_db_connection() as conn: cursor = conn.execute( """INSERT INTO conversations (title, goal, claude_system, openai_system, claude_temp, openai_temp) VALUES (?, ?, ?, ?, ?, ?)""", ( data['title'], data['goal'], data['claude_system'], data['openai_system'], data.get('claude_temp', 0.7), data.get('openai_temp', 0.7) ) ) conversation_id = cursor.lastrowid conn.commit() return jsonify({"conversation_id": conversation_id, "status": "created"}) @app.route('/api/conversations', methods=['GET']) def list_conversations(): with get_db_connection() as conn: conversations = conn.execute( "SELECT * FROM conversations ORDER BY created_at DESC LIMIT 50" ).fetchall() return jsonify([dict(conv) for conv in conversations]) @app.route('/api/conversations/<int:conversation_id>', methods=['GET']) def get_conversation(conversation_id): with get_db_connection() as conn: conversation = conn.execute( "SELECT * FROM conversations WHERE id = ?", (conversation_id,) ).fetchone() if not conversation: return jsonify({"error": "Conversation not found"}), 404 messages = conn.execute( "SELECT * FROM messages WHERE conversation_id = ? ORDER BY timestamp", (conversation_id,) ).fetchall() return jsonify({ "conversation": dict(conversation), "messages": [dict(msg) for msg in messages] }) @app.route('/api/conversations/<int:conversation_id>/start', methods=['POST']) def start_conversation(conversation_id): with get_db_connection() as conn: conversation = conn.execute( "SELECT * FROM conversations WHERE id = ?", (conversation_id,) ).fetchone() if not conversation: return jsonify({"error": "Conversation not found"}), 404 # Start orchestration in background def run_orchestration(): asyncio.run(orchestrator.orchestrate_conversation( conversation_id, conversation['goal'], conversation['claude_system'], conversation['openai_system'], conversation['claude_temp'], conversation['openai_temp'], iterations=request.json.get('iterations', 5) )) thread = threading.Thread(target=run_orchestration) thread.daemon = True thread.start() return jsonify({"status": "started", "conversation_id": conversation_id}) @app.route('/api/conversations/<int:conversation_id>/stop', methods=['POST']) def stop_conversation(conversation_id): orchestrator.stop_conversation(conversation_id) return jsonify({"status": "stopped", "conversation_id": conversation_id}) @app.route('/api/export/<int:conversation_id>', methods=['GET']) def export_conversation(conversation_id): with get_db_connection() as conn: conversation = conn.execute( "SELECT * FROM conversations WHERE id = ?", (conversation_id,) ).fetchone() messages = conn.execute( "SELECT * FROM messages WHERE conversation_id = ? ORDER BY timestamp", (conversation_id,) ).fetchall() export_data = { "conversation": dict(conversation), "messages": [dict(msg) for msg in messages], "exported_at": datetime.now().isoformat() } # Save to exports folder filename = f"conversation_{conversation_id}_{datetime.now().strftime('%Y%m%d_%H%M%S')}.json" filepath = os.path.join('exports', filename) with open(filepath, 'w') as f: json.dump(export_data, f, indent=2) return send_from_directory('exports', filename, as_attachment=True) # WebSocket Events @socketio.on('connect') def on_connect(): print(f"Client connected: {request.sid}") emit('connected', {'status': 'connected'}) @socketio.on('disconnect') def on_disconnect(): print(f"Client disconnected: {request.sid}") @socketio.on('join_conversation') def on_join_conversation(data): conversation_id = data['conversation_id'] join_room(f"conv_{conversation_id}") emit('joined_conversation', {'conversation_id': conversation_id}) @socketio.on('leave_conversation') def on_leave_conversation(data): conversation_id = data['conversation_id'] leave_room(f"conv_{conversation_id}") emit('left_conversation', {'conversation_id': conversation_id}) if __name__ == '__main__': # Initialize database os.makedirs(os.path.dirname(DATABASE_PATH), exist_ok=True) init_database() # Start server port = int(os.getenv('PORT', 5000)) socketio.run(app, host='0.0.0.0', port=port, debug=True) BACKEND_APP_EOF # Backend requirements cat > backend/requirements.txt << 'BACKEND_REQ_EOF' # Core Flask Dependencies Flask==3.0.0 Flask-SocketIO==5.3.6 Flask-CORS==4.0.0 Werkzeug==3.0.1 # WebSocket and Real-time Communication eventlet==0.33.3 python-socketio==5.10.0 # Environment and Configuration python-dotenv==1.0.0 # AI API Clients anthropic==0.7.8 openai==1.3.8 # HTTP Requests and Utilities requests==2.31.0 urllib3==2.1.0 # Date and Time Utilities python-dateutil==2.8.2 # JSON and Data Processing jsonschema==4.20.0 # Production Server (Optional) gunicorn==21.2.0 # Development and Debugging python-json-logger==2.0.7 # Security and Validation validators==0.22.0 cryptography==41.0.8 # Performance and Monitoring psutil==5.9.6 # Type Hints (for development) typing-extensions==4.8.0 # Additional Utilities colorama==0.4.6 tqdm==4.66.1 BACKEND_REQ_EOF # Database schema cat > database/schema.sql << 'DB_SCHEMA_EOF' -- AI Orchestrator Database Schema -- SQLite Database for storing conversations and messages -- Drop existing tables if they exist (for development) DROP TABLE IF EXISTS messages; DROP TABLE IF EXISTS conversations; DROP TABLE IF EXISTS settings; DROP TABLE IF EXISTS api_usage; -- Conversations table CREATE TABLE conversations ( id INTEGER PRIMARY KEY AUTOINCREMENT, title TEXT NOT NULL, goal TEXT NOT NULL, claude_system TEXT NOT NULL DEFAULT 'You are Claude, a helpful AI assistant.', openai_system TEXT NOT NULL DEFAULT 'You are GPT-4, a powerful AI assistant.', claude_temp REAL NOT NULL DEFAULT 0.7 CHECK(claude_temp >= 0 AND claude_temp <= 1), openai_temp REAL NOT NULL DEFAULT 0.7 CHECK(openai_temp >= 0 AND openai_temp <= 1), status TEXT NOT NULL DEFAULT 'created' CHECK(status IN ('created', 'active', 'completed', 'stopped', 'error')), iterations_planned INTEGER DEFAULT 5 CHECK(iterations_planned > 0 AND iterations_planned <= 50), iterations_completed INTEGER DEFAULT 0, created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP, updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP, started_at TIMESTAMP NULL, completed_at TIMESTAMP NULL, total_tokens_used INTEGER DEFAULT 0, estimated_cost REAL DEFAULT 0.0, metadata TEXT DEFAULT '{}' -- JSON field for additional data ); -- Messages table CREATE TABLE messages ( id INTEGER PRIMARY KEY AUTOINCREMENT, conversation_id INTEGER NOT NULL, ai_model TEXT NOT NULL CHECK(ai_model IN ('claude', 'openai')), role TEXT NOT NULL CHECK(role IN ('user', 'assistant', 'system', 'error')), content TEXT NOT NULL, iteration_number INTEGER DEFAULT 0, tokens_used INTEGER DEFAULT 0, response_time_ms INTEGER DEFAULT 0, timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP, metadata TEXT DEFAULT '{}', -- JSON field for additional data like model version, temperature used, etc. FOREIGN KEY (conversation_id) REFERENCES conversations (id) ON DELETE CASCADE ); -- Settings table for application configuration CREATE TABLE settings ( id INTEGER PRIMARY KEY AUTOINCREMENT, key TEXT UNIQUE NOT NULL, value TEXT NOT NULL, description TEXT, updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ); -- API usage tracking table CREATE TABLE api_usage ( id INTEGER PRIMARY KEY AUTOINCREMENT, conversation_id INTEGER, ai_model TEXT NOT NULL CHECK(ai_model IN ('claude', 'openai')), endpoint TEXT NOT NULL, tokens_used INTEGER DEFAULT 0, cost REAL DEFAULT 0.0, response_time_ms INTEGER DEFAULT 0, success BOOLEAN DEFAULT TRUE, error_message TEXT NULL, timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP, FOREIGN KEY (conversation_id) REFERENCES conversations (id) ON DELETE SET NULL ); -- Indexes for better query performance CREATE INDEX idx_conversations_status ON conversations(status); CREATE INDEX idx_conversations_created_at ON conversations(created_at DESC); CREATE INDEX idx_conversations_updated_at ON conversations(updated_at DESC); CREATE INDEX idx_messages_conversation_id ON messages(conversation_id); CREATE INDEX idx_messages_timestamp ON messages(timestamp); CREATE INDEX idx_messages_ai_model ON messages(ai_model); CREATE INDEX idx_messages_conversation_timestamp ON messages(conversation_id, timestamp); CREATE INDEX idx_api_usage_conversation_id ON api_usage(conversation_id); CREATE INDEX idx_api_usage_ai_model ON api_usage(ai_model); CREATE INDEX idx_api_usage_timestamp ON api_usage(timestamp DESC); CREATE INDEX idx_settings_key ON settings(key); -- Triggers for automatic timestamp updates CREATE TRIGGER update_conversation_timestamp AFTER UPDATE ON conversations BEGIN UPDATE conversations SET updated_at = CURRENT_TIMESTAMP WHERE id = NEW.id; END; CREATE TRIGGER update_settings_timestamp AFTER UPDATE ON settings BEGIN UPDATE settings SET updated_at = CURRENT_TIMESTAMP WHERE id = NEW.id; END; -- Insert default settings INSERT INTO settings (key, value, description) VALUES ('app_version', '1.0.0', 'Application version'), ('max_iterations_per_conversation', '20', 'Maximum iterations allowed per conversation'), ('default_claude_temperature', '0.7', 'Default temperature for Claude'), ('default_openai_temperature', '0.7', 'Default temperature for OpenAI'), ('api_timeout_seconds', '30', 'API request timeout in seconds'), ('auto_save_enabled', 'true', 'Whether to auto-save conversations'), ('max_conversations_per_user', '100', 'Maximum conversations to keep'), ('cleanup_older_than_days', '90', 'Delete conversations older than this many days'); -- Views for easier querying CREATE VIEW conversation_summary AS SELECT c.id, c.title, c.status, c.created_at, c.updated_at, c.iterations_planned, c.iterations_completed, c.total_tokens_used, c.estimated_cost, COUNT(m.id) as message_count, MAX(m.timestamp) as last_message_at FROM conversations c LEFT JOIN messages m ON c.id = m.conversation_id GROUP BY c.id, c.title, c.status, c.created_at, c.updated_at, c.iterations_planned, c.iterations_completed, c.total_tokens_used, c.estimated_cost; CREATE VIEW recent_activity AS SELECT 'conversation' as activity_type, c.id as item_id, c.title as title, 'Created conversation: ' || c.title as description, c.created_at as timestamp FROM conversations c UNION ALL SELECT 'message' as activity_type, m.conversation_id as item_id, c.title as title, m.ai_model || ' responded in: ' || c.title as description, m.timestamp as timestamp FROM messages m JOIN conversations c ON m.conversation_id = c.id ORDER BY timestamp DESC LIMIT 50; -- Data validation triggers CREATE TRIGGER validate_conversation_temperatures BEFORE INSERT ON conversations BEGIN SELECT CASE WHEN NEW.claude_temp < 0 OR NEW.claude_temp > 1 THEN RAISE(ABORT, 'Claude temperature must be between 0 and 1') WHEN NEW.openai_temp < 0 OR NEW.openai_temp > 1 THEN RAISE(ABORT, 'OpenAI temperature must be between 0 and 1') END; END; CREATE TRIGGER validate_conversation_iterations BEFORE INSERT ON conversations BEGIN SELECT CASE WHEN NEW.iterations_planned < 1 OR NEW.iterations_planned > 50 THEN RAISE(ABORT, 'Iterations planned must be between 1 and 50') END; END; -- Performance optimization for large datasets PRAGMA journal_mode = WAL; PRAGMA synchronous = NORMAL; PRAGMA cache_size = 10000; PRAGMA temp_store = memory; DB_SCHEMA_EOF echo "üé® Creating frontend files..." # Create basic frontend structure that will be populated by create-react-app cat > frontend/package.json << 'FRONTEND_PKG_EOF' { "name": "ai-orchestrator-frontend", "version": "1.0.0", "description": "AI Orchestration Platform - Frontend Interface", "private": true, "homepage": ".", "dependencies": { "@emotion/react": "^11.11.1", "@emotion/styled": "^11.11.0", "@mui/icons-material": "^5.14.19", "@mui/material": "^5.14.20", "@testing-library/jest-dom": "^5.17.0", "@testing-library/react": "^13.4.0", "@testing-library/user-event": "^13.5.0", "@types/jest": "^27.5.2", "@types/node": "^16.18.65", "@types/react": "^18.2.42", "@types/react-dom": "^18.2.17", "@types/react-router-dom": "^5.3.3", "@types/react-syntax-highlighter": "^15.5.11", "axios": "^1.6.2", "date-fns": "^2.30.0", "react": "^18.2.0", "react-dom": "^18.2.0", "react-markdown": "^9.0.1", "react-router-dom": "^6.20.1", "react-scripts": "5.0.1", "react-syntax-highlighter": "^15.5.0", "recharts": "^2.8.0", "socket.io-client": "^4.7.4", "typescript": "^4.9.5", "web-vitals": "^2.1.4" }, "scripts": { "start": "BROWSER=none react-scripts start", "build": "react-scripts build", "test": "react-scripts test", "eject": "react-scripts eject", "analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'", "type-check": "tsc --noEmit", "lint": "eslint src --ext .ts,.tsx,.js,.jsx", "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix" }, "eslintConfig": { "extends": [ "react-app", "react-app/jest" ], "rules": { "no-unused-vars": "warn", "@typescript-eslint/no-unused-vars": "warn", "react-hooks/exhaustive-deps": "warn" } }, "browserslist": { "production": [ ">0.2%", "not dead", "not op_mini all" ], "development": [ "last 1 chrome version", "last 1 firefox version", "last 1 safari version" ] }, "devDependencies": { "@types/lodash": "^4.14.202", "source-map-explorer": "^2.5.3" }, "proxy": "http://localhost:5000" } FRONTEND_PKG_EOF # Environment configuration cat > .env.template << 'ENV_TEMPLATE_EOF' # AI Orchestration Platform - Environment Configuration # Copy this file to .env and replace the placeholder values with your actual settings # ============================================================================= # API KEYS (REQUIRED) # ============================================================================= # Get your Anthropic API key from: https://console.anthropic.com/ ANTHROPIC_API_KEY=your_anthropic_api_key_here # Get your OpenAI API key from: https://platform.openai.com/ OPENAI_API_KEY=your_openai_api_key_here # ============================================================================= # FLASK CONFIGURATION # ============================================================================= # Environment mode (development, production) FLASK_ENV=development # Enable/disable debug mode FLASK_DEBUG=True # Secret key for session management (generate a random string) SECRET_KEY=your_secret_key_here_change_this_to_a_random_string # ============================================================================= # DATABASE CONFIGURATION # ============================================================================= # Path to SQLite database file DATABASE_PATH=database/orchestrator.db # ============================================================================= # SERVER CONFIGURATION # ============================================================================= # Backend server host HOST=localhost # Backend server port PORT=5000 # Frontend development server port FRONTEND_PORT=3000 ENV_TEMPLATE_EOF # Create default .env file cat > .env << 'ENV_DEFAULT_EOF' # API Keys (Replace with your actual keys) ANTHROPIC_API_KEY=your_anthropic_api_key_here OPENAI_API_KEY=your_openai_api_key_here # Flask Configuration FLASK_ENV=development FLASK_DEBUG=True SECRET_KEY=ai-orchestrator-secret-key-change-this # Database DATABASE_PATH=database/orchestrator.db # Server Configuration HOST=localhost PORT=5000 FRONTEND_PORT=3000 ENV_DEFAULT_EOF # Setup script cat > setup.sh << 'SETUP_EOF' #!/bin/bash echo "üöÄ AI Orchestration Platform - Complete Setup" echo "==============================================" # Create project structure echo "üìÅ Creating project structure..." mkdir -p backend/{api,models,services,utils,static} mkdir -p frontend/{src/{components,pages,services,hooks,utils,styles},public} mkdir -p database logs exports echo "üì¶ Setting up Python virtual environment..." python3 -m venv venv source venv/bin/activate echo "üìã Installing Python dependencies..." pip install --upgrade pip cd backend pip install -r requirements.txt cd .. echo "üìã Setting up React frontend..." cd frontend if [ ! -d "node_modules" ]; then npx create-react-app . --template typescript npm install @mui/material @emotion/react @emotion/styled @mui/icons-material npm install axios socket.io-client react-router-dom @types/react-router-dom npm install react-syntax-highlighter @types/react-syntax-highlighter npm install react-markdown recharts date-fns fi cd .. echo "üìä Creating database..." if [ ! -f "database/orchestrator.db" ]; then python3 -c " import sqlite3 import os os.makedirs('database', exist_ok=True) conn = sqlite3.connect('database/orchestrator.db') with open('database/schema.sql', 'r') as f: conn.executescript(f.read()) conn.commit() conn.close() print('Database initialized successfully!') " fi echo "üéØ Setup complete! Next steps:" echo "1. Edit .env file with your API keys" echo "2. Run: ./start.sh" echo "3. Open http://localhost:3000 in your browser" chmod +x start.sh stop.sh echo "‚úÖ Setup script completed successfully!" SETUP_EOF # Start script cat > start.sh << 'START_EOF' #!/bin/bash echo "üöÄ Starting AI Orchestration Platform" echo "=====================================" # Check if we're in the right directory if [ ! -f "setup.sh" ]; then echo "‚ùå Error: Please run this script from the ai-orchestrator directory" exit 1 fi # Check if virtual environment exists if [ ! -d "venv" ]; then echo "‚ùå Error: Virtual environment not found. Please run setup.sh first." exit 1 fi # Check if .env file exists if [ ! -f ".env" ]; then echo "‚ùå Error: .env file not found. Please run setup.sh first and configure your API keys." exit 1 fi # Activate virtual environment echo "üêç Activating Python virtual environment..." source venv/bin/activate # Check if database exists, create if not if [ ! -f "database/orchestrator.db" ]; then echo "üóÑÔ∏è Initializing database..." mkdir -p database python3 -c " import sqlite3 import os os.makedirs('database', exist_ok=True) conn = sqlite3.connect('database/orchestrator.db') with open('database/schema.sql', 'r') as f: conn.executescript(f.read()) conn.commit() conn.close() print('Database initialized successfully!') " fi # Function to cleanup on exit cleanup() { echo "" echo "üõë Shutting down AI Orchestration Platform..." # Kill backend if running if [ ! -z "$BACKEND_PID" ]; then echo " Stopping backend server..." kill $BACKEND_PID 2>/dev/null fi # Kill frontend if running if [ ! -z "$FRONTEND_PID" ]; then echo " Stopping frontend server..." kill $FRONTEND_PID 2>/dev/null fi echo "‚úÖ Shutdown complete!" exit 0 } # Set up signal handlers trap cleanup SIGINT SIGTERM # Start backend server echo "üîß Starting backend server..." cd backend export PYTHONPATH="${PYTHONPATH}:$(pwd)" python app.py & BACKEND_PID=$! cd .. # Wait a moment for backend to start sleep 3 # Check if backend is running if ! ps -p $BACKEND_PID > /dev/null; then echo "‚ùå Backend failed to start. Check the logs above." exit 1 fi echo "‚úÖ Backend server started (PID: $BACKEND_PID)" # Start frontend server echo "üé® Starting frontend server..." cd frontend # Check if node_modules exists if [ ! -d "node_modules" ]; then echo "üì¶ Installing frontend dependencies..." npm install if [ $? -ne 0 ]; then echo "‚ùå Failed to install frontend dependencies" kill $BACKEND_PID exit 1 fi fi # Start React development server npm start & FRONTEND_PID=$! cd .. # Wait a moment for frontend to start sleep 5 # Check if frontend is running if ! ps -p $FRONTEND_PID > /dev/null; then echo "‚ùå Frontend failed to start. Check the logs above." kill $BACKEND_PID 2>/dev/null exit 1 fi echo "‚úÖ Frontend server started (PID: $FRONTEND_PID)" echo "" echo "üéâ AI Orchestration Platform is now running!" echo "================================================" echo "üåê Frontend: http://localhost:3000" echo "üîß Backend: http://localhost:5000" echo "üìä API Docs: http://localhost:5000/api/health" echo "" echo "üí° Tips:" echo " ‚Ä¢ Make sure you've set your API keys in the .env file" echo " ‚Ä¢ Use the Settings page to configure API keys in the UI" echo " ‚Ä¢ Press Ctrl+C to stop all servers" echo "" echo "üìù Logs will appear below. Press Ctrl+C to stop." echo "================================================" # Wait for user to stop the servers wait START_EOF # Stop script cat > stop.sh << 'STOP_EOF' #!/bin/bash echo "üõë Stopping AI Orchestration Platform" echo "=====================================" # Function to kill processes by port kill_by_port() { PORT=$1 SERVICE=$2 PID=$(lsof -ti:$PORT 2>/dev/null) if [ ! -z "$PID" ]; then echo "üîç Found $SERVICE running on port $PORT (PID: $PID)" kill -TERM $PID 2>/dev/null # Wait for graceful shutdown sleep 2 # Force kill if still running if ps -p $PID > /dev/null 2>&1; then echo "‚ö†Ô∏è Force killing $SERVICE..." kill -KILL $PID 2>/dev/null fi echo "‚úÖ $SERVICE stopped" else echo "‚ÑπÔ∏è $SERVICE not running on port $PORT" fi } # Stop backend server (port 5000) kill_by_port 5000 "Backend server" # Stop frontend server (port 3000) kill_by_port 3000 "Frontend server" # Kill any remaining Python processes for this app echo "üîç Checking for remaining Python processes..." PYTHON_PIDS=$(ps aux | grep "[p]ython.*app.py" | awk '{print $2}') if [ ! -z "$PYTHON_PIDS" ]; then echo "üîß Stopping remaining Python processes..." echo $PYTHON_PIDS | xargs kill -TERM 2>/dev/null sleep 1 echo $PYTHON_PIDS | xargs kill -KILL 2>/dev/null 2>&1 fi # Kill any remaining Node processes for this app echo "üîç Checking for remaining Node processes..." NODE_PIDS=$(ps aux | grep "[n]ode.*react-scripts" | awk '{print $2}') if [ ! -z "$NODE_PIDS" ]; then echo "üé® Stopping remaining Node processes..." echo $NODE_PIDS | xargs kill -TERM 2>/dev/null sleep 1 echo $NODE_PIDS | xargs kill -KILL 2>/dev/null 2>&1 fi echo "" echo "‚úÖ AI Orchestration Platform stopped successfully!" echo "üí° You can restart it anytime with: ./start.sh" STOP_EOF # Make scripts executable chmod +x setup.sh start.sh stop.sh # Create comprehensive README cat > README.md << 'README_EOF' # üöÄ AI Orchestration Platform A powerful interface that enables Claude and OpenAI's GPT-4 to collaborate on complex tasks through iterative conversations. Built with React, Flask, and real-time WebSocket communication. ## ‚ú® Features ### ü§ñ Dual AI Collaboration - **Claude 3.5 Sonnet** and **GPT-4** working together - Custom system instructions for each AI - Adjustable creativity levels (temperature controls) - Real-time conversation monitoring ### üéõÔ∏è Advanced Controls - **Temperature Settings**: Fine-tune AI creativity (0-1) - **Iteration Limits**: Control conversation length (1-20 rounds) - **Custom Prompts**: Define specific roles and expertise for each AI - **Real-time Monitoring**: Watch AIs collaborate live ### üåê Modern Interface - **Dark Theme**: Professional, eye-friendly design - **Real-time Updates**: WebSocket-powered live conversations - **Responsive Design**: Works on desktop and mobile - **Conversation Management**: Save, export, and organize sessions ## üöÄ Quick Start ### 1. Setup
