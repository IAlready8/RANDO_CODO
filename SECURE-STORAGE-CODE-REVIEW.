// ...inside CollaborationHub class...

constructor() {
  this.apiKey = null;
  // ...
}
async init() {
  // ...
  this.apiKey = await SecureStorage.loadSecure('api_key');
  if (this.apiKey) {
    const apiInput = document.getElementById('api-key');
    apiInput.value = '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
    apiInput.addEventListener('focus', () => {
      if (apiInput.value.startsWith('‚Ä¢‚Ä¢‚Ä¢‚Ä¢')) apiInput.value = '';
    });
    apiInput.addEventListener('input', e => {
      // Only update this.apiKey if it's not masked
      if (!e.target.value.startsWith('‚Ä¢‚Ä¢‚Ä¢‚Ä¢')) this.apiKey = e.target.value;
    });
    apiInput.addEventListener('change', async e => {
      const apiKey = e.target.value.trim();
      if (apiKey && apiKey.startsWith('sk-')) {
        try {
          await SecureStorage.saveSecure('api_key', apiKey);
          this.apiKey = apiKey;
          apiInput.value = '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
          await this.checkConnections();
          this.showNotification('API key saved and validated', 'success');
        } catch (error) {
          this.showNotification('Failed to save API key: ' + error.message, 'error');
        }
      }
    });
  }
  // ...
}
6. How to run (local development):
# In backend/
npm install
npm run dev

# In frontend/
npm install express
node server.js

# Visit: http://localhost:3000
