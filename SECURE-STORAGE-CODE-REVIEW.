import * as pulumi from '@pulumi/pulumi';

// 1. Provision a managed Postgres database
const db = new digitalocean.DatabaseCluster('pg-cluster', {
    engine: 'pg',
    version: '15',
    size: 'db-s-1vcpu-1gb',
    region: 'nyc3',
    nodeCount: 1,
});

