  <button id="send-message-button">Send</button>
  <!-- other buttons ‚Ä¶ -->

  <!-- Serve this file, don‚Äôt open it directly -->
  <script type="module">
    /* üëá your entire script exactly as you posted goes here */
  </script>
</body>
