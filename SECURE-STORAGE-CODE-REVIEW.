       436 +        enabled: true,
       437 +        totalMetrics: this.metrics.size + register.getMetricsAsArray().length,
       438 +        customMetrics: this.metrics.size,
       439 +        systemMetrics: register.getMetricsAsArray().length,
       440 +        lastCollection: new Date().toISOString()
       441 +      };
       442 +    }
